<h1>Books</h1>

<h5>Find Books by Title, Genre, or Author</h5>
<%= form_tag(books_path, method: :get) do  %>
<%= text_field_tag :search %>
<%= submit_tag "Search"%>
<% end %>

<h5> Lacking inspiration? </h5>
<%= form_tag(book_path(@books.random_book), method: :get) do %>
<%= submit_tag "I'm feeling lucky" %>
<%end%>

<% @books.each do |b| %>

<div class="">
  <%= link_to b.title, b %>
</div>
<% end %>
